generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       Int       @id @default(autoincrement())
  name                     String
  email                    String    @unique
  password                 String
  created_at               DateTime  @default(now())
  updated_at               DateTime  @default(now()) @updatedAt

  @@map("user")
}

model Equipment {
  id       String     @id @unique
  api_key  String

  @@map("equipment")
}

model SensorReading {
  id            Int       @id @default(autoincrement())
  equipmentId   String
  timestamp     DateTime
  value         Float
  
  @@index([equipmentId, timestamp])
  @@map("sensor_reading")
}
